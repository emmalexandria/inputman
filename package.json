{
	"name": "inputman",
	"version": "0.0.3",
	"description": "A simple input manager for the web. No dependencies, as small as possible, and easy to use.",
	"type": "module",
	"scripts": {
		"build": "tsup",
		"test": "vitest"
	},
	"files": [
		"./dist"
	],
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"keywords": [
		"input",
		"keyboard",
		"mouse",
		"manager",
		"dom",
		"vitest",
		"typescript"
	],
	"author": "Emma Alexandria <emma.jellemabutler@gmail.com> (https://emmalexandria.dev)",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/emmalexandria/inputman"
	},
	"packageManager": "pnpm@10.11.1",
	"dependencies": {
		"tsup": "^8.5.0",
		"typescript": "^5.8.3",
		"vitest": "^3.2.3"
	},
	"devDependencies": {
		"@vitest/browser": "^3.2.3",
		"happy-dom": "^18.0.1",
		"playwright": "^1.53.0"
	}
}
